<script>
  // Simple mobile menu toggle
  const menuToggle = document.querySelector('.menu-toggle');
  const nav = document.querySelector('nav');
  const overlay = document.querySelector('.overlay');
  
  menuToggle.addEventListener('click', () => {
    nav.classList.toggle('active');
    overlay.classList.toggle('active');
    menuToggle.textContent = nav.classList.contains('active') ? '‚úï' : '‚ò∞';
  });
  
  overlay.addEventListener('click', () => {
    nav.classList.remove('active');
    overlay.classList.remove('active');
    menuToggle.textContent = '‚ò∞';
  });
  
  // Close menu when clicking on a link
  const navLinks = document.querySelectorAll('nav a:not(.services-dropdown a)');
  navLinks.forEach(link => {
    link.addEventListener('click', () => {
      nav.classList.remove('active');
      overlay.classList.remove('active');
      menuToggle.textContent = '‚ò∞';
    });
  });

  // Mobile services dropdown toggle
  if (window.innerWidth <= 900) {
    const servicesDropdown = document.querySelector('.services-dropdown > a');
    servicesDropdown.addEventListener('click', (e) => {
      e.preventDefault();
      document.querySelector('.services-dropdown').classList.toggle('active');
    });
  }
</script>
